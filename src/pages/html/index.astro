---
import { getCollection } from "astro:content";
const blogEntries = await getCollection("html");

import Articulos from "../../components/Articulos.astro";
import Layout from "../../layout/Layout.astro";
import HeroHtml from "../../sections/HeroHtml.astro";
---

<Layout
    title={`${blogEntries[0].collection}`}
    description="Articulos del curso de Html por Enrique Calero"
>
    <HeroHtml />
    <section class="wrapper-layout padding-section">
        <header>
            <h2 class="title-section text-center" id="Articulos">Articulos</h2>
        </header>
        <ul class="Articles-Container | grid-columns">
            {
                blogEntries.map((entry) => {
                    return (
                        <li>
                            <Articulos {...entry.data} slug={entry.slug} collection={entry.collection} />
                        </li>
                    );
                })
            }
        </ul>
    </section>
</Layout>

<style lang="scss">
    @use "../../scss/settings/" as *;
    .Articles-Container {

        --_columns : 1;

        @include media-Query(tablet) {
            --_columns : 2;
        }
        @include media-Query(desktop) {
            --_columns : 3;
        }
    }
</style>
