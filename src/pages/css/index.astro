---
import { getCollection } from "astro:content";
const blogEntries = await getCollection("css");

import Articulos from "../../components/Articulos.astro";
import Layout from "../../layout/Layout.astro";
import HeroCss from "../../sections/HeroCss.astro";
---

<Layout
    title={`${blogEntries[0].collection}`}
    description="Articulos del curso de Html por Enrique Calero"
>
    <HeroCss />
    <section class="wrapper-layout padding-section">
        <header>
            <h2 class="title-section text-center">Articulos</h2>
        </header>
        <ul class="Articles-Container">
            {
                blogEntries.map((entry) => {
                    return (
                        <li>
                            <Articulos {...entry.data} slug={entry.slug} collection={entry.collection} />
                        </li>
                    );
                })
            }
        </ul>
    </section>
</Layout>

<style>
    .Articles-Container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(min(300px, 100%), 1fr));
        gap: 1.3rem;
    }
</style>