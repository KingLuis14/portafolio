---

interface Props {
    nameIcon: string;
    texto: string;
}

import { Icon } from 'astro-icon/components';

const {nameIcon, texto} = Astro.props;
---


<article class="Skill">
    <span class="Skill__Icon">
        <Icon name={nameIcon} size={55}/>
    </span>
    <p class="Skill__texto">{texto}</p>
</article>

<style lang="scss" >
    .Skill{
        flex-basis: 40%;
        // background-color: crimson;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;

        @media screen and (width > 640px) {
            flex-basis: 30%;
        }
    }

    .Skill__Icon{
        transition: transform .5s;
        &:hover{
            transform: scale(1.25);
        }
    }
</style>