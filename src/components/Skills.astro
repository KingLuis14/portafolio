---
interface Props {
    nameIcon: string;
    texto: string;
}

import { Icon } from "astro-icon/components";

const { nameIcon, texto } = Astro.props;
---

<div class="Icon">
    <span class="Icon__img">
        <Icon name={nameIcon} size={55} />
    </span>
    <p class="Icon__text">{texto}</p>
</div>

<style lang="scss">
    .Icon {
        padding: 1rem;
        display: flex;
        align-items: center;
        gap: 0.8rem;
        filter: grayscale(1);

        &__img {
            transition: filter 0.5s;
            
        }

        &:hover {
                filter: grayscale(0);
            }

        @media screen and (width > 640px) {
            flex-basis: 30%;
        }
    }
</style>
