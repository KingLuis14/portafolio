---
interface Props {
    titulo: string;
    descripcion?: string;
    bentoStyle?: string;
    imagenes: { base64: string; original: string };

}

const { titulo, descripcion, imagenes, bentoStyle, ...rest } = Astro.props;

const { base64, original } = imagenes;
---

<article class=`Bento ${bentoStyle} ` {...rest}>
    <a class="BentoImage-Container" style="overflow: hidden; display: block;"
    >
        <img
            class="Bento__imagen"
            data-srcx={original}
            style={`background-image: url(${base64})`}
            alt={`${titulo} - Enrique Calero`}
        />
    </a>
    <div class="overlay"></div>
    <div class="Bento__Contenido">
        <h3>{titulo}</h3>
        {descripcion && <p>{descripcion}</p>}
        <ul class="Tag">
            <li class="Tag__Item smallx">astro</li>
            <li class="Tag__Item smallx">html</li>
            <li class="Tag__Item smallx">css</li>
            <li class="Tag__Item smallx">Javascript</li>
        </ul>
    </div>
</article>

<style lang="scss">
    .Bento {
        display: grid;
        align-items: end;
        border-radius: .7rem;
        overflow: hidden;
        position: relative;

        &__imagen {
            aspect-ratio: 16/9;
            transform: scale(1.02);
            transition: transform 0.6s;
            background-color: #130b36;

            &:hover {
                transform: scale(1.2);
            }
        }

    }

    .BentoImage-Container{
        position: absolute;
        top: 0;
        bottom: 0;
        width: 100%;
    }

    .Bento__Contenido{
        position: relative;
        
        padding: 1rem;
        display: grid;
        gap: 1rem;
    }

    .overlay{
        position: absolute;
        top: 0;
        width: 100%;
        bottom: 0;
          background: linear-gradient(180deg, 
          rgba(0,0,0,.2) 10%,
           rgba(0,0,0,.8) 100%);
    }

    .Tag {
        display: flex;
        flex-wrap: wrap;
        gap: 0.7rem;
       

        &__Item {
            padding: 0.1rem .8rem;
            border-radius: 100vh;
            border: 1.5px solid #fff;
        }
    }
</style>
