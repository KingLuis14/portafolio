---
import BentoItem from "./BentoItem.astro";
import ProyectosData from "../data/Proyectos.json";

const {imagenes} = ProyectosData[0];
const {imagenes: images21} = ProyectosData[1];
const {imagenes: imageGifs} = ProyectosData[2];
const {imagenes: imagesIFT} = ProyectosData[3];
---

<section id="Portafolio">
    <div class="wrapper">
        <h2 class="titleSection">Proyectos</h2>
        <div class="Bento-Container">
            <BentoItem titulo="Intituto IISEP" bentoStyle="col4" imagenes={imagenes}/>
            <BentoItem titulo="Buscador de Gifs" bentoStyle="col6" imagenes={imageGifs}/>
            <BentoItem titulo="Juego de 21" bentoStyle="col6" imagenes={images21}/>
            <BentoItem titulo="Intituto IFT" bentoStyle="col4" imagenes={imagesIFT}/>
        </div>
    </div>
</section>

<style lang="scss">
    .Bento-Container{
        display: grid;
        grid-template-columns: 1fr;
        grid-auto-rows: 40vh;
        gap: 1rem;

        @media (width > 768px) {
            grid-template-columns: repeat(10,1fr);
        }
    }

    .col4{
        grid-column: span 1;
        @media (width > 768px) {
            grid-column: span 4;
        }
    }
    .col6{
        grid-column: span 1;
        @media (width > 768px) {
            grid-column: span 6;
        }
    }
</style>