---
import BentoItem from "./BentoItem.astro";
import ProyectosData from "../data/Proyectos.json";

const {imagenes, url} = ProyectosData[0];
const {imagenes: images21, url: url2} = ProyectosData[1];
const {imagenes: imageGifs, url: url3} = ProyectosData[2];
const {imagenes: imagesIFT, url: url4} = ProyectosData[3];
---

<section id="Portafolio">
    <div class="CircleBlur--portafolio degradado"></div>
    <div class="wrapper" >
        <h2 class="titleSection">Proyectos</h2>
        <div class="Bento-Container">
            <BentoItem titulo="Intituto IISEP" url={url}  bentoStyle="col4" imagenes={imagenes}/>
            <BentoItem titulo="Buscador de Gifs"url={url3}  bentoStyle="col6" imagenes={imageGifs}/>
            <BentoItem titulo="Juego de 21" url={url2} bentoStyle="col6" imagenes={images21}/>
            <BentoItem titulo="Intituto IFT"url={url4}  bentoStyle="col4" imagenes={imagesIFT}/>
        </div>
    </div>
</section>

<style lang="scss">
    .Bento-Container{
        display: grid;
        grid-template-columns: 1fr;
        grid-auto-rows: 40vh;
        gap: 1rem;

        @media (width > 768px) {
            grid-template-columns: repeat(10,1fr);
        }
    }

    .col4{
        grid-column: span 1;
        @media (width > 768px) {
            grid-column: span 4;
        }
    }
    .col6{
        grid-column: span 1;
        @media (width > 768px) {
            grid-column: span 6;
        }
    }
</style>